{
  "name": "eslint-config-smagrassi",
  "version": "1.1.0",
  "description": "Personal ESLint configuration",
  "main": "index.js",
  "files": [
    "index.js",
    "rules"
  ],
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lint": "eslint ./index.js",
    "pretest": "npm run lint",
    "test": "tape './tests/test.*.js' | faucet",
    "prepublish": "npm test"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "repository": "StefanoMagrassi/eslint-config-smagrassi",
  "keywords": [
    "eslint",
    "eslintconfig",
    "lint",
    "linter",
    "javascript",
    "js"
  ],
  "author": "StefanoMagrassi <stefano.magrassi@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/StefanoMagrassi/eslint-config-smagrassi#readme",
  "devDependencies": {
    "eslint": "4.0.x",
    "faucet": "0.0.1",
    "sinon": "2.3.4",
    "tape": "4.6.3"
  }
}
